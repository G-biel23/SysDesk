<?xml version="1.0" encoding="utf-8"?>
<!--  Scroll (rolagem) da tela  -->
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".activity.AbrirChamadoForm">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Ícone da Tela -->
    <ImageView
        android:id="@+id/iconChamado"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_add_ticket"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Título da Tela -->
    <TextView
        android:id="@+id/tituloTela"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Abrir Chamado"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/coral"
        android:layout_marginStart="15dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toEndOf="@id/iconChamado"/>

    <!-- Container com fundo branco arredondado -->

    <!-- Campo Título -->
    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="550dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconChamado" />

    <EditText
        android:id="@+id/editTitulo"
        style="@style/Edit_Text"
        android:hint="Título do chamado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="@+id/containerComponents"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"/>

    <!-- Campo Descrição -->
    <EditText
        android:id="@+id/editDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="4"
        android:maxLines="6"
        android:maxLength="300"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:hint="Descreva o problema com alguns detalhes"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/editTitulo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


    <!-- Categoria -->
    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/editDescricao"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"/>

    <!-- Campo para digitar nova categoria (inicialmente oculto) -->
    <EditText
        android:id="@+id/editOutraCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite a nova categoria"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/spinnerCategoria"/>


    <!-- Botão Enviar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnviarChamado"
        android:layout_width="wrap_content"
        style="@style/Button"
        android:text="Enviar Chamado"
        android:paddingHorizontal="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/editOutraCategoria"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"/>

    <!-- Navbar -->
    <FrameLayout
        android:id="@+id/navbarContainer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            layout="@layout/custom_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
