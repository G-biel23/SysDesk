<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/off_white">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloSolucao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sugerir Solução"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/azul_vibrante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Chamado ID -->
    <TextView
        android:id="@+id/txtChamadoId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chamado #ID"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtTituloSolucao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Campo de texto para solução -->
    <EditText
        android:id="@+id/edtSolucao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Digite sua sugestão de solução"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"
        android:padding="12dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/txtChamadoId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEnviarSolucao"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botão enviar -->
    <Button
        android:id="@+id/btnEnviarSolucao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:backgroundTint="@color/azul_vibrante"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
